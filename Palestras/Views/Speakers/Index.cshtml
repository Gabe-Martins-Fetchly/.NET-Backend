@model IEnumerable<Lecture.Models.Speakers>

@{
    ViewData["Title"] = "Index";
}

<h2>Speakers</h2>

<p>
    <a asp-action="Create" class="btn btn-primary rounded-0"><i class="fa fa-plus-circle"></i>Include</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qualification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateLecture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeLecture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Local)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Foto)   
            </th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">
                    <img src="~/Uploads/@item.Picture" height="70" width="50" asp-append-version="true" />
                </a>
            </td>
            <td>
                @item.Name)
            </td>
            <td>
                @item.Qualification)
            </td>
            <td>
                @item.Experience)
            </td>
            <td>
                @item.DateLecture.ToString("dd-MM-yyyy")
            </td>
            <td>
                @item.TimeLecture.ToString("H:mm")
            </td>
            <td>
                @item.Local)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Foto)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detail</a> |
                @*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info rounded-0"><i class="fa fa-pencil-alt"></i></a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger rounded-0"><i class="fa fa-trash-alt"></i></a>*@
            </td>
        </tr>
        }
    </tbody>
</table>
